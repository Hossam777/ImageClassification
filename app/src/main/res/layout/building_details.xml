<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_bg"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <TextView
        android:id="@+id/buildingDetailsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hideBuildingDetails"
        android:text="معلومات عن المبني"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="75dp"
        android:textSize="24sp"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/hideBuildingDetails"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="@string/hide"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buildingDetailsTV"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="39dp"
        android:layout_marginStart="19dp"
        android:background="@drawable/btn_bg_radius_24"
        app:backgroundTint="@color/green_btn_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>