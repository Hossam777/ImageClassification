<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        tools:context=".presentation.authenticationactivities.SignupActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/topViewBG"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/green" />
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/topViewBG"
                app:layout_constraintBottom_toBottomOf="@id/topViewBG"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="16dp"
                android:background="@color/transparent"
                android:src="@drawable/back_arrow" />
            <TextView
                android:id="@+id/menuOpenBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/topViewBG"
                app:layout_constraintEnd_toEndOf="@id/topViewBG"
                app:layout_constraintTop_toTopOf="@id/backButton"
                app:layout_constraintBottom_toBottomOf="@id/backButton"
                android:text="@string/signup"
                android:textSize="20sp"
                android:textColor="#FFF" />
            <TextView
                android:id="@+id/welcomeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/topViewBG"
                android:text="@string/welcome_txt"
                android:textSize="40sp"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/orange" />
            <TextView
                android:id="@+id/enterDataTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/welcomeTxt"
                android:text="@string/please_enter"
                android:textSize="20sp"
                android:layout_marginTop="54dp"
                android:layout_marginHorizontal="26dp"
                android:textColor="#000" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlName"
                style="@style/CustomTextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/enterDataTxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tlTitle"
                android:layout_marginStart="26dp"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                android:hint="@string/name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlTitle"
                style="@style/CustomTextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                app:layout_constraintTop_toTopOf="@+id/tlName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tlName"
                android:layout_marginEnd="26dp"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:hint="@string/title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlMail"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tlName"
                android:layout_marginVertical="40dp"
                android:layout_marginHorizontal="26dp"
                android:textSize="14sp"
                android:hint="@string/email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlPassword"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tlMail"
                android:layout_marginVertical="40dp"
                android:layout_marginHorizontal="26dp"
                android:textSize="14sp"
                android:hint="@string/password"
                app:passwordToggleTint="@color/green"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlConfirmPassword"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tlPassword"
                android:layout_marginVertical="40dp"
                android:layout_marginHorizontal="26dp"
                android:textSize="14sp"
                android:hint="@string/confirm_password"
                app:passwordToggleTint="@color/green"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/signupBtn"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:text="@string/signup"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tlConfirmPassword"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="75dp"
                android:background="@drawable/btn_bg_radius_24"
                app:backgroundTint="@color/green_btn_bg" />
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:visibility="gone"
                android:layout_marginVertical="50dp"
                app:layout_constraintTop_toBottomOf="@+id/signupBtn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>