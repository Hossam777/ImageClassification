<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.imageclassification.presentation.homeactivity.ClassificationViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.homeactivity.ClassificationFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/app_bg">

            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/LiveCameraTxt"
                android:text="@string/live_camera"
                android:textAllCaps="false"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/launchGalleryTxt"
                android:background="@drawable/btn_bg_radius_24"
                app:backgroundTint="@color/green_btn_bg"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/launchGalleryTxt"
                android:text="@string/launch_gallery"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/btn_bg_radius_24"
                app:backgroundTint="@color/green_btn_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/takePictureTxt" />

            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/takePictureTxt"
                android:text="@string/take_picture"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/btn_bg_radius_24"
                app:backgroundTint="@color/green_btn_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="330sp"
                android:id="@+id/imageIV"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>